---
import '../styles/global.css';
import Navbar from '../components/landing/Navbar.astro';
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Homepage</title>
</head>
<body class="bg-white text-gray-900">
    <Navbar />
    
    <main>
        <slot />
    </main>

    <footer class="mt-24">
        <div
            class="
            bg-linear-to-r from-pink-400 via-pink-500 to-purple-500
            rounded-t-[48px]
            px-6 md:px-16 py-16
            text-white
            "
        >
            <div class="max-w-7xl mx-auto grid grid-cols-1 md:grid-cols-3 gap-12">
                <!-- Company -->
                <div>
                    <h4 class="font-semibold text-lg mb-4">Company</h4>
                    <ul class="space-y-2 text-sm text-white/90">
                        <li><a href="#" class="hover:underline">About us</a></li>
                        <li><a href="#" class="hover:underline">Community</a></li>
                        <li><a href="#" class="hover:underline">Pricing</a></li>
                        <li><a href="#" class="hover:underline">Blog</a></li>
                    </ul>
                </div>

                <!-- Legal -->
                <div>
                    <h4 class="font-semibold text-lg mb-4">Legal</h4>
                    <ul class="space-y-2 text-sm text-white/90">
                        <li><a href="#" class="hover:underline">Privacy Policy</a></li>
                        <li><a href="#" class="hover:underline">Term and Condition</a></li>
                        <li><a href="#" class="hover:underline">Licensing</a></li>
                    </ul>
                </div>

                <!-- Download -->
                <div>
                    <h4 class="font-semibold text-lg mb-4">Download</h4>
                    <a href="#" class="inline-block">
                    <img
                        src="https://upload.wikimedia.org/wikipedia/commons/7/78/Google_Play_Store_badge_EN.svg"
                        alt="Get it on Google Play"
                        class="h-12"
                    />
                    </a>
                </div>
            </div>
        </div>
    </footer>
</body>
</html>