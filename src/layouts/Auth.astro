---
import '../styles/global.css';
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Authentication</title>
</head>
<body class="bg-white">
    <main class="min-h-screen flex items-center justify-center">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-12 md:gap-16 max-w-6xl w-full px-6 md:px-10">
            <!-- Left side -->
            <section class="flex items-center justify-center md:justify-start">
                <div class="w-full max-w-md">
                    <slot />
                </div>
            </section>

            <!-- Right side -->
            <section class="hidden md:flex justify-center">
                <img 
                src="https://images.unsplash.com/vector-1757385854214-9e9b9c9de850?w=600&auto=format&fit=crop&q=60&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxzZWFyY2h8NDl8fHJlc3RhdXJhbnR8ZW58MHx8MHx8fDI%3D" 
                alt="login_image"
                class="w-full max-w-md h-130 object-cover rounded-3xl"
                />
            </section>
        </div>
    </main>
</body>
</html>