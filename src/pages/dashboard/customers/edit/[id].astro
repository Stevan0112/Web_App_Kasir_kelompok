---
import Dashboard from "../../../../layouts/Dashboard.astro";

const { id } = Astro.params;
const resp = await fetch(`http://localhost:3000/api/customers/${id}`);
const customer = await resp.json();

const rawDate = customer.DATE_OF_BIRTH;
const birthDate = rawDate ? new Date(rawDate).toISOString().split("T")[0] : "";

if (Astro.request.method === "POST") {
    const data = await Astro.request.formData();
    const body = {
        name: data.get("name"),
        email: data.get("email"),
        phone: data.get("contact"),
        address: data.get("address"),
        gender_id: data.get("gender_id"),
        DATE_OF_BIRTH: data.get("tgl_lahir"),
        PLACE_OF_BIRTH: data.get("tempat_lahir"),
    };

    // Kirim data ke Server untuk  membuat produk baru
    await fetch(`http://localhost:3000/api/customers/${id}`, {
        method: "PUT",
        headers: {
            "Content-Type": "application/json"
        },
        body: JSON.stringify(body),
    });

    return Astro.redirect("/dashboard/customers");
}
---

<Dashboard title="Customers">
    <form method="POST" class="max-w-3xl">
        <section class="bg-white rounded-xl shadow-sm">
            <!-- Header -->
            <div class="px-6 py-4 border-b">
                <h2 class="font-bold text-2xl">Edit Customer</h2>
                <p class="text-sm text-gray-500">Perbarui data customer ke sistem</p>
            </div>
            
            <!-- Form -->
            <div class="p-6 space-y-5">
                <!-- Customer name -->
                <div>
                    <label for="Nama-Customer" class="block text-sm font-medium mb-1">
                        Customer Name
                    </label>
                    <input type="text" name="name" value={customer.name} placeholder="Masukkan nama customer" class="w-full border rounded-lg px-4 py-2 focus:ring-2 focus:ring-pink-500 outline-none" required/>
                </div>

                <!-- Email & Contact -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <!-- Email -->
                    <div>
                        <label for="Email" class="block text-sm font-medium mb-1">
                            Email
                        </label>
                        <input type="email" name="email" value={customer.email} placeholder="Masukkan email customer" class="w-full border rounded-lg px-4 py-2 focus:ring-2 focus:ring-pink-500 outline-none" required/>
                    </div>

                    <!-- Contact number -->
                    <div>
                        <label for="Contact" class="block text-sm font-medium mb-1">
                            Contact Number
                        </label>
                        <input type="number" name="contact" value={customer.phone} placeholder="Masukkan nomor HP customer" class="w-full border rounded-lg px-4 py-2 focus:ring-2 focus:ring-pink-500 outline-none" required/>
                    </div>
                </div>
                
                <!-- Address -->
                <div>
                    <label for="Address" class="block text-sm font-medium mb-1">
                        Address
                    </label>
                    <textarea name="address" placeholder="Masukkan alamat customer" class="w-full border rounded-lg px-4 py-2 focus:ring-2 focus:ring-pink-500 outline-none" required>{customer.address}</textarea>
                </div>

                <!-- Gender & Date of birth -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <!-- Gender -->
                    <div>
                        <label for="Gender" class="block text-sm font-medium mb-1">
                            Gender
                        </label>
                        <select name="gender_id" class="w-full border rounded-lg px-4 py-2 focus:ring-2 focus:ring-pink-500 outline-none" required>
                            <option value="">-- Pilih Gender --</option>
                            <option value="L" selected={customer.gender_id === "L"}>Laki-laki</option>
                            <option value="P" selected={customer.gender_id === "P"}>Perempuan</option>
                        </select>
                    </div>

                    <!-- Date of birth -->
                    <div>
                        <label for="Date-birth" class="block text-sm font-medium mb-1">
                            Date of Birth
                        </label>
                        <input type="date" name="tgl_lahir" value={birthDate} placeholder="Masukkan tanggal lahir customer" class="w-full border rounded-lg px-4 py-2 focus:ring-2 focus:ring-pink-500 outline-none" required/>
                    </div>
                </div>
                
                <!-- Place of birth -->
                <div>
                    <label for="Place-birth" class="block text-sm font-medium mb-1">
                        Place of Birth
                    </label>
                    <input type="text" name="tempat_lahir" value={customer.PLACE_OF_BIRTH} placeholder="Masukkan tempat lahir customer" class="w-full border rounded-lg px-4 py-2 focus:ring-2 focus:ring-pink-500 outline-none" required/>
                </div>
            </div>

            <!-- Button -->
            <div class="px-6 py-4 border-t flex justify-end gap-3">
                <a href="/dashboard/customers" class="px-4 py-2 rounded-lg bg-gray-200 hover:bg-gray-300">
                    Cancel
                </a>
                <button type="submit" class="px-5 py-2 rounded-lg bg-pink-500 text-white hover:bg-pink-600">
                    Save
                </button>
            </div>
        </section>
    </form>
</Dashboard>