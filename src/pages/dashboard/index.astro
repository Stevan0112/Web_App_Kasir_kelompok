---
import Dashboard from "../../layouts/Dashboard.astro";
---

<Dashboard>
    <div class="space-y-6">
        <!-- Summary Cards Section -->
        <section class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-4 gap-4">
            {Array(4).fill(0).map(() => (
                <div class="bg-white rounded-xl p-4 shadow-sm">
                    <div class="flex justify-between items-start">
                        <p class="text-sm text-gray-800">Title</p>
                        <span>...</span>
                    </div>
                    <h3 class="mt-2 text-xl font-semibold">Rp.0</h3>
                    <div class="flex items-center gap-2 md:gap-4 mt-4">
                        <div class="mt-2 text-sm text-green-600 bg-green-100 inline-block px-3 py-0.5 rounded">↑ 20%</div>
                        <p class="text-sm text-gray-800">Last Week</p>
                    </div>
                </div>
            ))}
        </section>

        <!-- Chart and Top Selling Section -->
        <section class="grid grid-cols-1 xl:grid-cols-3 gap-6">
            <!-- Chart -->
            <div class="xl:col-span-2 bg-white rounded-xl p-4 shadow-sm">
                <div class="flex justify-between items-center mb-4">
                    <h2 class="font-semibold">Sales Statistics</h2>
                    <span>...</span>
                </div>

                <!-- Fake Chart -->
                <div class="h-64 flex items-end gap-2">
                    {Array(10).fill(0).map(() => (
                        <div class="flex-1 bg-green-400 rounded"></div>
                    ))}
                </div>
            </div>

            <!-- Top Selling Products and Map/Image -->
            <div class="bg-white rounded-xl p-4 shadow-sm">
                <div class="mb-4">
                    <h2 class="font-semibold">Top Selling Products</h2>
                </div>

                <img 
                src="https://images.unsplash.com/vector-1757385854214-9e9b9c9de850?w=600&auto=format&fit=crop&q=60&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxzZWFyY2h8NDl8fHJlc3RhdXJhbnR8ZW58MHx8MHx8fDI%3D" 
                alt="Map"
                class="w-full h-64 object-cover rounded-lg"
                />
            </div>
        </section>

        <!-- Table Section -->
        <section class="bg-white rounded-xl p-4 shadow-sm overflow-x-auto">
            <h2 class="font-semibold mb-4">Top Selling Products</h2>

            <table class="w-full text-sm">
                <thead class="text-gray-500 border-b">
                    <tr>
                        <th class="text-left py-2">Product Name</th>
                        <th class="text-left py-2">Price</th>
                        <th class="text-left py-2">Category</th>
                        <th class="text-left py-2">Quantity</th>
                        <th class="text-left py-2">Amount</th>
                        <th class="text-left py-2">Action</th>
                    </tr>
                </thead>
                <tbody>
                    {Array(5).fill(0).map(() => (
                        <tr class="border-b hover:bg-gray-200">
                            <td class="py-3">Good Food</td>
                            <td class="py-3">Rp.0</td>
                            <td class="py-3">Makanan</td>
                            <td class="py-3">0</td>
                            <td class="py-3"></td>
                            <td class="py-3">⋮</td>
                        </tr>
                    ))}
                </tbody>
            </table>
        </section>
    </div>
</Dashboard>