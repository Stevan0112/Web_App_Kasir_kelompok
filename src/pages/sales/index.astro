---
import Dashboard from "../../layouts/Dashboard.astro";
---

<Dashboard title="Sales">
    <div class="space-y-6">
        <!-- Card -->
        <section class="bg-white rounded-xl shadow-sm overflow-x-auto">
            <!-- Card Header -->
            <div class="flex items-center justify-between px-4 py-3 border-b">
                <h2 class="font-semibold">Top Selling Weekly</h2>
                <div class="flex gap-2">
                    <button class="px-3 py-1 text-sm border rounded-md hover:bg-gray-100">
                        Filter
                    </button>
                    <button class="px-3 py-1 text-sm border rounded-md hover:bg-gray-100">
                        See All
                    </button>
                    <button class="px-3 py-1 text-sm bg-pink-500 text-white rounded-md hover:bg-pink-600">
                        + Add
                    </button>
                </div>
            </div>

            <!-- Table -->
            <table class="w-full text-sm">
                <thead class="text-gray-500 border-b">
                    <tr>
                        <th class="text-center py-3">Product Name</th>
                        <th class="text-left py-3">Start Date</th>
                        <th class="text-left py-3">End Date</th>
                        <th class="text-left py-3">Stock</th>
                        <th class="text-left py-3">Status</th>
                        <th class="text-center py-3">Action</th>
                    </tr>
                </thead>
                <tbody>
                {Array(10).fill(0).map(() => (
                    <tr class="border-b hover:bg-gray-50">
                        <!-- Product -->
                        <td class="py-3 text-center font-medium">Mie ayam</td>
                        <td class="py-3">01 - 01 - 2026</td>
                        <td class="py-3">21 - 01 - 2026</td>
                        <td class="py-3">500</td>

                        <!-- Status -->
                        <td class="py-3">
                            <div class="w-20 h-4 bg-gray-200 rounded-full overflow-hidden">
                                <div class="h-full bg-green-400 w-3/4"></div>
                            </div>
                        </td>

                        <!-- Action -->
                        <td class="py-3 text-center">
                            <div class="flex justify-center gap-2">
                                <button class="p-1 rounded-full bg-gray-200 hover:bg-gray-300">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-pencil"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M4 20h4l10.5 -10.5a2.828 2.828 0 1 0 -4 -4l-10.5 10.5v4" /><path d="M13.5 6.5l4 4" /></svg>
                                </button>
                                <button class="p-1 rounded-full bg-gray-200 hover:bg-gray-300">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor" class="icon icon-tabler icons-tabler-filled icon-tabler-trash"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M20 6a1 1 0 0 1 .117 1.993l-.117 .007h-.081l-.919 11a3 3 0 0 1 -2.824 2.995l-.176 .005h-8c-1.598 0 -2.904 -1.249 -2.992 -2.75l-.005 -.167l-.923 -11.083h-.08a1 1 0 0 1 -.117 -1.993l.117 -.007h16z" /><path d="M14 2a2 2 0 0 1 2 2a1 1 0 0 1 -1.993 .117l-.007 -.117h-4l-.007 .117a1 1 0 0 1 -1.993 -.117a2 2 0 0 1 1.85 -1.995l.15 -.005h4z" /></svg>
                                </button>
                            </div>
                        </td>
                    </tr>
                ))}
                </tbody>
            </table>
        </section>

        <!-- Pagination -->
        <div class="flex justify-center gap-2">
            <button class="w-8 h-8 bg-gray-300 hover:bg-gray-400">1</button>
            <button class="w-8 h-8 bg-gray-300 hover:bg-gray-400">2</button>
            <button class="w-8 h-8 bg-gray-300 hover:bg-gray-400">â†’</button>
        </div>
    </div>
</Dashboard>