---
const { product } = Astro.props;
---

<div class="space-y-3">
    <div class="relative overflow-hidden">
        <img 
        src="https://images.unsplash.com/vector-1740294799662-8407742d8edc?w=600&auto=format&fit=crop&q=60&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTN8fGZvb2R8ZW58MHx8MHx8fDI%3D" 
        alt={product.name}
        class="w-full h-48 object-cover"
        />

        {product.stock === 0 && (
            <span class="absolute top-3 right-3 w-4 h-4 bg-red-500 rounded-full"></span>
        )}
    </div>

    <h3 class="font-semibold">{product.name}</h3>

    <div class="flex items-center gap-3 text-sm">
        <span class="text-yellow-400 text-2xl">★★★★★</span>
        <span class="font-bold">4.0</span>
        <span class="text-gray-400">(3.275 Review)</span>
    </div>
    <div class="flex justify-between items-center text-sm">
        <span class="font-medium">Rp.{product.price},-</span>
        <span class="font-bold pr-6">{product.category_name}</span>
    </div>
</div>