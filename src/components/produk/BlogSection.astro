<section class="max-w-7xl mx-auto px-6 md:px-16 py-24">
    <!-- Header -->
    <div class="mb-16">
        <p class="text-xl tracking-wide font-bold">Blogs</p>
        <h2 class="mt-4 text-4xl md:text-5xl font-serif font-medium leading-tight">
            Cerita Makanan untuk<br />menemani harimu
        </h2>
    </div>

    <!-- Blog Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-10">
        {blogs.map(blog => (
        <article class="group">
            <!-- Image -->
            <div class="overflow-hidden rounded-lg">
            <img
                src={blog.image}
                alt="Blog Image"
                class="w-full h-64 object-cover transition-transform duration-300 group-hover:scale-105"
            />
            </div>

            <!-- Meta -->
            <p class="mt-2 text-gray-900">
                {blog.date} - {blog.author}
            </p>

            <!-- Excerpt -->
            <p class="mt-4 text-gray-900 leading-relaxed">
                {blog.excerpt}
            </p>

            <!-- Read More -->
            <a href="#" class="mt-4 inline-flex items-center gap-2 font-medium hover:underline">
                Read More →
            </a>
        </article>
        ))}
    </div>

    <!-- View More -->
    <div class="mt-16">
        <a href="#" class="inline-flex items-center gap-3 border border-gray-400 px-6 py-3 hover:bg-gray-100 transition">
            View more articles →
        </a>
    </div>
</section>
